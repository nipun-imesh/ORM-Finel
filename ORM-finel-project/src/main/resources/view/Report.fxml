<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/report.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.controller.ReportController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="760.0" spacing="20.0">
            <children>
                <Label styleClass="page-title" text="Patient">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" />
                    </padding>
                </Label>

                <Separator styleClass="title-separator" />

                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label styleClass="form-label" text="ID" />
                        <Label styleClass="id-value" text="-----" GridPane.columnIndex="1" fx:id="idLabel" />

                        <Label styleClass="form-label" text="Name:" GridPane.columnIndex="2" />
                        <TextField fx:id="nameField" promptText="Enter patient name" GridPane.columnIndex="3" />

                        <Label styleClass="form-label" text="Contact:" GridPane.rowIndex="1" />
                        <TextField fx:id="contactField" promptText="Enter contact number" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label styleClass="form-label" text="Reg.Date" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <DatePicker fx:id="regDatePicker" promptText="Select birth date" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="addButton" defaultButton="true" mnemonicParsing="false" onAction="#handleAddAction" styleClass="add-button" text="Add" />
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateAction" styleClass="update-button" text="Update" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteAction" styleClass="delete-button" text="Delete" />
                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetAction" styleClass="reset-button" text="Reset" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </HBox>

                <Label styleClass="section-label" text="Patient Records:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" />
                    </padding>
                </Label>

                <TableView fx:id="patientTable" prefHeight="250.0" prefWidth="760.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Name" />
                        <TableColumn fx:id="contactColumn" prefWidth="180.0" text="Contact" />
                        <TableColumn fx:id="regDateColumn" prefWidth="180.0" text="Reg.Date" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>